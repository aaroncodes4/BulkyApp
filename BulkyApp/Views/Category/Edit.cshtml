@model Category


<div class="mb-4" style="border-radius: 6px;">

    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary">
        <i class="bi bi-sign-turn-left-fill"></i>
        Back
    </a>
</div>

<div class="card shadow border-0">
    <div class="card-header bg-primary ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h4 style="color: white">Create New Category</h4>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" type="text" class="form-control" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" type="text" class="form-control" />
                    <label asp-for="DisplayOrder" class="ms-2"></label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary" style="width: 150px">Save</button>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}